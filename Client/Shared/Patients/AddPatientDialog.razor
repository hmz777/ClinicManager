@using ClinicProject.Shared.DTOs
@using ClinicProject.Shared.Models.Patient
<MudDialog>
    <DialogContent>
        <MudTextField MaxLength="40" @bind-Value="PatientDTO.FirstName" Label="First Name" Variant="Variant.Text"></MudTextField>
        <MudTextField MaxLength="40" @bind-Value="PatientDTO.MiddleName" Label="Middle Name" Variant="Variant.Text"></MudTextField>
        <MudTextField MaxLength="40" @bind-Value="PatientDTO.LastName" Label="Last Name" Variant="Variant.Text"></MudTextField>
        <MudNumericField @bind-Value="PatientDTO.Age" Label="Age"></MudNumericField>
        <MudTextField Mask="@(new PatternMask("000000000000000"))" @bind-Value="PatientDTO.PhoneNumber" Label="Phone Number" Variant="Variant.Text"></MudTextField>
        <MudSelect @bind-Value="PatientDTO.Gender" Label="Gender">
            @foreach (var val in Enum.GetValues<Gender>())
            {
                <MudSelectItem Value="val" />
            }
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    public PatientDTO PatientDTO { get; set; } = new();

    void Submit() => MudDialog.Close(DialogResult.Ok(PatientDTO));
    void Cancel() => MudDialog.Cancel();
}