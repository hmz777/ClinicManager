@using ClinicProject.Shared.DTOs
@using ClinicProject.Shared.Models.Patient
<MudDialog>
    <DialogContent>
        <MudForm Model="Model" @ref="Form" Validation="@(ValidateValue)" ValidationDelay="0">
            <MudTextField Class="mb-2"
                          Variant="Variant.Outlined"
                          Label="First Name"
                          Immediate="true"
                          For="() => Model.FirstName"
                          @bind-Value="Model.FirstName" />
            <MudTextField Class="mb-2"
                          Variant="Variant.Outlined"
                          Label="Middle Name"
                          Immediate="true"
                          For="() => Model.MiddleName"
                          @bind-Value="Model.MiddleName" />
            <MudTextField Class="mb-2"
                          Variant="Variant.Outlined"
                          Label="Last Name"
                          Immediate="true"
                          For="() => Model.LastName"
                          @bind-Value="Model.LastName" />
            <MudNumericField Class="mb-2"
                             Variant="Variant.Outlined"
                             Label="Age"
                             Immediate="true"
                             For="() => Model.Age"
                             @bind-Value="Model.Age" />
            <MudSelect Class="mb-2"
                       Variant="Variant.Outlined"
                       Label="Gender"
                       Immediate="true"
                       For="() => Model.Gender"
                       @bind-Value="Model.Gender">
                @foreach (var item in Enum.GetValues<Gender>())
                {
                    <MudSelectItem Value="@item" />
                }
            </MudSelect>
            <MudTextField Variant="Variant.Outlined"
                          Label="Phone Number"
                          Immediate="true"
                          Mask="@(new PatternMask("000000000000000"))"
                          For="() => Model.PhoneNumber"
                          @bind-Value="Model.PhoneNumber" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>